<h1>Enter Your Fabulous Idea! :)</h1>

<%= form_for [@user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :notes %>
  <%= f.text_field :notes %>

  <%= f.collection_select(:category_id, @categories, :id, :name) %>

  <%= f.submit %>
<% end %>
